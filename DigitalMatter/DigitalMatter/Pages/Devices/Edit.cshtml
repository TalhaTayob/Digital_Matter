    <input type="hidden" name="id" value="@Model.group.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name of Group</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="groupname" value="@Model.group.name">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Parent ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="parentID" value="@Model.group.parent_id">
        </div>
    </div>

    @if (Model.success.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.success</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Back</a>
        </div>
    </div>

</form>